<div class="row">
  <div class="offset-sm-3 col-sm-6">
    <%= form_for @thing do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <lable>Delay</label>
        <%= f.text_field :delay, class: "form-control" %>
      </div>
      <%= f.submit 'Create Thing', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
